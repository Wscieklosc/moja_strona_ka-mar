      const res = await fetch(form.action, {
        method: 'POST',
        body: data,
        headers: { 'Accept': 'application/json' } // blokuje redirect, dostajemy JSON
      });

      if (res.ok) {
        form.reset(); // wyczyÅ›Ä‡ pola
